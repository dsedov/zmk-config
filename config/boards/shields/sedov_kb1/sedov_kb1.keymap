#include <behaviors.dtsi>
#include <behaviors/mouse_move.dtsi>
#include <behaviors/mouse_scroll.dtsi>
#include <behaviors/mouse_keys.dtsi>

#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/mouse.h>

#define DEFAULT 0
#define LOWER  1
#define RAISE  2
#define ADJUST 3
#define MOUSEL 4

/ {
    keymap {
        compatible = "zmk,keymap";

        default {
           bindings = <
                &kp ESC    &kp N1      &kp N2     &kp N3      &kp N4    &kp N5      &kp N6     &kp N7    &kp N8     &kp N9     &kp N0     &kp BSPC 
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp RET  
                &kp DEL    &kp A       &kp S      &kp D       &kp F     &kp G       &kp H      &kp J     &kp K      &kp L      &kp SEMI   &kp DEL   
                &kp LSHFT  &kp Z       &kp X      &kp C       &kp V     &kp B       &kp N      &kp M     &kp COMMA  &kp PERIOD &kp SLASH  &kp RSHIFT   
                &kp LCTRL  &kp LALT               &mo LOWER             &mo SPACE                        &mo RAISE             &kp RALT   &kp RCTRL  
            >;
        };
        lower_layer {
           bindings = <
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp BSPC 
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp BSPC  
                &kp ESC    &kp A       &kp S      &kp D       &kp F     &kp G       &kp H      &kp J     &kp K      &kp L      &kp SEMI   &kp SQT   
                &kp LSHFT  &kp Z       &kp X      &kp C       &kp V     &kp B       &kp N      &kp M     &kp COMMA  &kp PERIOD &kp SLASH  &mt RSHIFT RET   
                &kp LCTRL  &kp LALT    &mo MOUSEL &mo ADJUST  &mo LOWER &kp SPACE   &kp SPACE  
            >;
        };
        raise_layer {
           bindings = <
           &kp KP_MINUS    &kp N1      &kp N2     &kp N3      &kp N4    &kp N5      &kp N6     &kp N7    &kp N8     &kp N9     &kp N0     &kp KP_PLUS 
               &kp LBKT    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp RBKT  
                &kp SQT    &kp A       &kp S      &kp D       &kp F     &kp G       &kp H      &kp J     &kp K      &kp L      &kp SEMI   &kp NUBS   
                &kp UNDER  &kp Z       &kp X      &kp C       &kp V     &kp B       &kp N      &kp M     &kp COMMA  &kp PERIOD &kp SLASH  &kp KP_EQUAL   
                &kp LCTRL  &kp LALT               &mo LOWER             &mo SPACE                        &mo RAISE             &kp RALT   &kp RCTRL  
            >;
        };
        adjust_layer {
           bindings = <
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp BSPC 
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp BSPC  
                &kp ESC    &kp A       &kp S      &kp D       &kp F     &kp G       &kp H      &kp J     &kp K      &kp L      &kp SEMI   &kp SQT   
                &kp LSHFT  &kp Z       &kp X      &kp C       &kp V     &kp B       &kp N      &kp M     &kp COMMA  &kp PERIOD &kp SLASH  &mt RSHIFT RET   
                &kp LCTRL  &kp LALT    &mo MOUSEL &mo ADJUST  &mo LOWER &kp SPACE   &kp SPACE  
            >;
        };

        mouse_layer {
           bindings = <
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp BSPC 
                &kp TAB    &kp Q       &kp W      &kp E       &kp R     &kp T       &kp Y      &kp U     &kp I      &kp O      &kp P      &kp BSPC  
                &kp ESC    &kp A       &kp S      &kp D       &kp F     &kp G       &kp H      &kp J     &kp K      &kp L      &kp SEMI   &kp SQT   
                &kp LSHFT  &kp Z       &kp X      &kp C       &kp V     &kp B       &kp N      &kp M     &kp COMMA  &kp PERIOD &kp SLASH  &mt RSHIFT RET   
                &kp LCTRL  &kp LALT    &mo MOUSEL &mo ADJUST  &mo LOWER &kp SPACE   &kp SPACE  
            >;
        };
    };
};